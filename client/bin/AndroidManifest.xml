<?xml version="1.0" encoding="utf-8"?>
<!--
This Android Manifest is not used, because Dyad is an Android Library project.
This manifest contains the needed permissions, activities, and services that
your application's manifest must include to use Dyad.

Replace "your.app.pkg" with your own package name.
-->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="your.app.pkg"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
	<uses-permission android:name="your.app.pkg.permission.C2D_MESSAGE" /> 
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Only needed when using Bump -->
    <uses-permission android:name="android.permission.VIBRATE" />
	
	<permission android:name="your.app.pkg.permission.C2D_MESSAGE" 
	    		android:protectionLevel="signature" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
    	
        <!-- Only needed when using Bump -->
    	<service android:name="com.bump.api.BumpAPI" >
        	<intent-filter>
            	<action android:name="com.bump.api.IBumpAPI" />
        	</intent-filter>
  		</service>
  		
    	<service android:name="com.r2src.dyad.gcm.IntentService" />

    	<receiver android:name="com.r2src.dyad.gcm.BroadcastReceiver" 
    	          android:permission="com.google.android.c2dm.permission.SEND" >
			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE" />
				<action android:name="com.google.android.c2dm.intent.REGISTRATION" />
				<category android:name="your.app.pkg" />
			</intent-filter>
		</receiver>
  		
	</application>
    
</manifest>